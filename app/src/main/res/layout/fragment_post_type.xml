<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.post.PostFragmentType">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/post_gradient_background"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/post_border_custom"
            app:cardCornerRadius="50dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="20dp">

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:progressTint="#FFC107" />

                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="20dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/text_post4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="8dp"
                            android:gravity="center"
                            android:text="Quel est l'objet ?"
                            android:textAlignment="center"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/textMarque"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/background_edit_text_post"
                            android:hint="Montre, téléphone... etc"
                            android:includeFontPadding="true"
                            android:inputType="textPersonName"
                            android:padding="10dp"
                            android:paddingHorizontal="5dp"
                            android:textColor="#7A7A7A"
                            android:textColorHighlight="#E8E8E8"
                            android:textColorHint="#787878"
                            android:textColorLink="#6C6C6C"
                            android:textCursorDrawable="@drawable/cursor_color" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="20dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/text_post2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="8dp"
                            android:gravity="center"
                            android:text="Modèle, marque ?"
                            android:textAlignment="center"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/textModele"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/background_edit_text_post"
                            android:hint="Iphone 4, Rolex... etc"
                            android:includeFontPadding="true"
                            android:inputType="textPersonName"
                            android:padding="10dp"
                            android:paddingHorizontal="5dp"
                            android:textColor="#7A7A7A"
                            android:textColorHighlight="#E8E8E8"
                            android:textColorHint="#787878"
                            android:textColorLink="#6C6C6C"
                            android:textCursorDrawable="@drawable/cursor_color" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/imageButtonprevtype"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:background="@drawable/round_button"
                            android:src="@drawable/ic_action_arrows_left" />

                        <ImageButton
                            android:id="@+id/imageButtonnexttype"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_marginLeft="15dp"
                            android:background="@drawable/round_button"
                            android:src="@drawable/ic_action_arrows_right" />

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>


</FrameLayout>